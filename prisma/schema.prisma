// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id  Int @id @default(autoincrement())
  username String @unique
  password String
  organizer Organizers?
  guest Guests?

  @@map("users")
}

model Organizers {
  id Int @id @default(autoincrement())
  user Users @relation(fields: [user_id], references: [id])
  user_id Int
  name String
  phone String
  events Events[]

  @@map("organizers")
}

model Guests {
  id Int @id @default(autoincrement())
  user Users @relation(fields: [user_id], references: [id])
  user_id Int
  name String
  phone String
  invitations GuestHasInvitations[]

  @@map("guests")
}

model Events {
  id Int @id @default(autoincrement())
  title String
  date String
  hour String
  description String
  organizer Organizers @relation(fields: [organizer_id], references: [id])
  organizer_id Int
  invitations Invitations[]

  @@map("events")
}

model Invitations {
  id Int @id @default(autoincrement())
  payed Boolean
  event Events @relation(fields: [event_id], references: [id])
  event_id Int
  guests GuestHasInvitations[]

  @@map("invitations")
}

model GuestHasInvitations {
  guest Guests @relation(fields: [guest_id], references: [id])
  guest_id Int
  invitation Invitations @relation(fields: [invitation_id], references: [id])
  invitation_id Int

  @@id([guest_id, invitation_id])
  @@map("guests_has_invitations")
}